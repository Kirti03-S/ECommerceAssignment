@model IEnumerable<ECommerceWeb.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Create New Product</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Current Stock</th>
            <th>Stock Limit</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="@product.ImageUrl" width="50" />
                    @product.Name
                </td>
                <td>₹@product.Price</td>
            
                <form asp-controller="Product" asp-action="UpdateStock" method="post">
                        @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@product.Id" />

                <td>@product.Name</td>
                <td>
                    <input type="number" name="currentStock" value="@product.CurrentStock"
                           class="form-control form-control-sm" min="0" />
                </td>
                
                
                   
                    <td>
                        <div class="btn-group btn-group-sm">
                            <button type="submit" class="btn btn-primary">Update Stock</button>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>


                </form>
            </tr>
        }
    </tbody>
</table>