@model IEnumerable<ECommerceWeb.Models.Product>


@{
    Layout = "_Layout";
}




@{
    ViewData["Title"] = "Product Listing";
}


@using System.Security.Claims

@if (User.IsInRole("Admin"))
{
    <div class="mb-4 d-flex justify-content-start gap-2">
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create Product</a>
        <a class="btn btn-secondary" asp-controller="Product" asp-action="Manage">Edit Products</a>
        <a class="btn btn-danger" asp-controller="Product" asp-action="Manage">Delete Products</a>
    </div>
}

<h2>Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="text-primary fw-bold">₹@product.Price</p>
                   
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary">Add to Cart</a>

                </div>
            </div>
        </div>
    }
</div>



