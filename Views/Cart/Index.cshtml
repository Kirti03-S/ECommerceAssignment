@model List<ECommerceWeb.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}

<h2>Your Shopping Cart</h2>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <strong>Total: </strong>
        <span class="fw-bold">
            @Model.Sum(x => x.Price * x.Quantity).ToString("C") 
        </span>
    </div>

    <form asp-controller="Order" asp-action="PlaceOrder" method="post">
        <button type="submit" class="btn btn-success mt-3">Place Order</button>
    </form>
}
