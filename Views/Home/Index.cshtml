@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1>Welcome to Our E‑Commerce Store</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <p>Hello, @User.Identity.Name!</p>

        <!-- Button to navigate to product listing -->
        <a asp-controller="Product" asp-action="Index" class="btn btn-success mx-2">
            View Products
        </a>

        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger mx-2">
                Logout
            </button>
        </form>
    }
    else
    {
        <p>Choose below to get started:</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary mx-2">
            Login
        </a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary mx-2">
            Register
        </a>
    }
</div>
